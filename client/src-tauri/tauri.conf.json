{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "SocialNetworking",
    "copyright": "2025 Mobium Contributors",
    "icon": [],
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "identifier": "com.mobium.app",
  "productName": "Mobium",
  "version": "0.1.0",
  "plugins": {
    "shell": {
      "open": "^https://"
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' wss://* ws://localhost:* ws://127.0.0.1:*; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Mobium",
        "width": 1200
      }
    ]
  }
}