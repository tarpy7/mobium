{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "category": "SocialNetworking",
    "copyright": "2025 Mobium Contributors",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "targets": "all",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "identifier": "com.mobium.app",
  "productName": "Mobium",
  "version": "0.1.0",
  "plugins": {
    "shell": {
      "open": "^https://"
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self' https://tauri.localhost; connect-src 'self' wss://* ws://* https://* http://*; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'wasm-unsafe-eval'"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Mobium",
        "width": 1200
      }
    ],
    "withGlobalTauri": true
  }
}